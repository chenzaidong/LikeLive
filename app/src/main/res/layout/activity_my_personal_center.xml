<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my__personal___center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.myandroid.likelive.ui.activity.MyActivityPersonalCenter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350px">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:src="@mipmap/my_top_image1"
            android:scaleType="fitXY"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="20px"
        android:clickable="true"
        android:background="@drawable/background_color_change"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_30"
            android:layout_marginLeft="20px"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />
        <ImageView
            android:id="@+id/img_head_portrait"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/login_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90px"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:clickable="true"
        android:background="@drawable/background_color_change"
        android:layout_marginTop="5px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_30"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_28"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90px"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:clickable="true"
        android:background="@drawable/background_color_change"
        android:layout_marginTop="5px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_30"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_28"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90px"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

    </RelativeLayout>
</LinearLayout>

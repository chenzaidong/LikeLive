<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_350"
    android:layout_margin="@dimen/size_5"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img_head_portrait"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_300"
            android:scaleType="fitXY"
        />
        <ImageView
            android:id="@+id/img_tel_mode"
            android:layout_width="@dimen/size_130"
            android:layout_height="@dimen/size_40"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:src="@mipmap/recom_pc_live"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sex_belle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:background="@drawable/belle_background"
            android:gravity="center"
           android:paddingStart="@dimen/size_10"
            android:paddingEnd="@dimen/size_10"
            android:textColor="@color/colorFrame"
            android:textSize="@dimen/size_20"
        />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/size_25"
        />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_20"
            android:textSize="@dimen/size_20"
        />
    </LinearLayout>
</LinearLayout>
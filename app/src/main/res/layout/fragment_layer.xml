<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_room_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/ll_player_info"
            android:layout_width="@dimen/size_300"
            android:layout_height="@dimen/size_80"
            android:layout_margin="@dimen/size_20"
            android:background="@drawable/player_info_bg"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_10"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/iv_focus"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_20"
                android:src="@mipmap/room_header_followed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/iv_icon"
                android:layout_toStartOf="@id/iv_focus"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_25"/>

                <TextView
                    android:id="@+id/tv_room_user_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_25"/>
            </LinearLayout>
        </RelativeLayout>
        <cc.myandroid.likelive.ui.customview.CustomMarqueeTextView
            android:id="@+id/tv_share_description"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/size_40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginStart="@dimen/size_20"
            android:drawableEnd="@mipmap/xllive_setting_item_clickable"
            android:gravity="center"
            android:paddingEnd="@dimen/size_10"
            android:text="贡献榜 "
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llgiftcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lvmessage"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:gravity="top"
        android:orientation="vertical"/>

    <ListView
        android:id="@+id/lvmessage"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_above="@+id/layout_bottom"
        android:layout_marginLeft="10dp"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:listSelector="#00000000"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        android:transcriptMode="normal"/>

    <FrameLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/tvChat"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_radius_bottom_white"
                android:gravity="center"
                android:src="@mipmap/room_chat_img"
            />

            <ImageView
                android:layout_marginStart="@dimen/size_20"
                android:id="@+id/iv_share"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvChat"
                android:src="@mipmap/room_share"/>

            <ImageView
                android:id="@+id/tvSendtwo"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gift_bg"
                android:gravity="center"
                android:src="@mipmap/kiss"
            />

            <ImageView
                android:id="@+id/tvSendthree"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tvSendtwo"
                android:background="@drawable/gift_bg"
                android:gravity="center"
                android:padding="@dimen/size_10"
                android:src="@mipmap/chocolate"
            />

            <ImageView
                android:id="@+id/tvSendfor"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_20"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tvSendthree"
                android:gravity="center"
                android:src="@mipmap/room_gift_entrance"
            />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llinputparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:hint="在此输入你要说的话!"
                    android:maxLength="30"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#888889"
                    android:textColorHint="#c8c8c8"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/sendInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/holo_blue_bright"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="发送"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>